{
  "compilerOptions": {
    "baseUrl": ".",                   // Set the base URL for module resolution
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@data-access/*": ["src/data-access/*"],
      "@routes/*": ["src/routes/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
